<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nom : Animal Name"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewSpecies"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="EspÃ¨ce : Animal Species"
        app:layout_constraintTop_toBottomOf="@id/textViewName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewSex"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sexe : Animal Sex"
        app:layout_constraintTop_toBottomOf="@id/textViewSpecies"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewBirthDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Date de naissance : Animal Birth Date"
        app:layout_constraintTop_toBottomOf="@id/textViewSex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewLastAppointment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Dernier RDV : Animal Last Appointment"
        app:layout_constraintTop_toBottomOf="@id/textViewBirthDate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
