<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OptionsActivity">

    <Button
        android:id="@+id/btnAfficherCheptel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Afficher le cheptel"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp" />

    <Button
        android:id="@+id/btnModifierAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modifier un animal"
        app:layout_constraintTop_toBottomOf="@id/btnAfficherCheptel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnAjouterAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter un animal"
        app:layout_constraintTop_toBottomOf="@id/btnModifierAnimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/btnSupprimerAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Supprimer un animal"
        app:layout_constraintTop_toBottomOf="@id/btnAjouterAnimal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />
</androidx.constraintlayout.widget.ConstraintLayout>